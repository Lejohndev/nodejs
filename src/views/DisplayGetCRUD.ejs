<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GetCRUD</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .btn-Edit {
            outline: none;
            background: rgb(166, 255, 0);
            border-radius: 3px;
            width: 60px;
            height: 25px;
            cursor: pointer;
            border: none;
        }

        .btn-Delete {
            outline: none;
            background: rgb(248, 38, 66);
            border-radius: 3px;
            width: 60px;
            height: 25px;
            cursor: pointer;
            border: none;

        }
    </style>
</head>

<body>
    <table style="width:100%">
        <tr>
            <th>email</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>address</th>
            <th>action</th>
        </tr>

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-Edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-Delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>